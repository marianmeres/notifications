{
	"name": "@marianmeres/notifications",
	"version": "1.0.0",
	"scripts": {
		"dev": "vite dev --port 10101",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "node --loader ts-node/esm tests/index.ts",
		"test:watch": "nodemon --delay 0.5 -q -w \"src/**/*.*\" -w \"tests/**/*.*\" -x \"node --loader ts-node/esm tests/index.ts\" --",
		"prettier": "prettier --write \"{src,tests,scripts}/**/*.{mjs,js,ts,css,scss,svelte}\"",
		"release": "release -v minor"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./Notifications.svelte": {
			"types": "./dist/svelte/Notifications.svelte.d.ts",
			"svelte": "./dist/svelte/Notifications.svelte"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@marianmeres/clog": "^1.0.0",
		"@marianmeres/random-human-readable": "^1.0.0",
		"@marianmeres/release": "^1.0.0",
		"@marianmeres/test-runner": "^2.0.13",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@types/node": "^18.15.0",
		"i": "^0.3.7",
		"nodemon": "^2.0.21",
		"npm": "^9.6.1",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"publint": "^0.1.9",
		"sass": "^1.59.3",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@marianmeres/store": "^1.0.0",
		"@marianmeres/ticker": "^1.1.0"
	}
}
